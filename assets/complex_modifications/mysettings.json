{
  "title": "MySettings",
  "rules": [
    {
      "description": "change control-b to ←",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "b",
            "modifiers": { "mandatory": [ "control" ] }
          },
          "to": [
            { "key_code": "left_arrow" }
          ]
        }
      ]
    },
    {
      "description": "change control-n to ↓",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "n",
            "modifiers": { "mandatory": [ "control" ] }
          },
          "to": [
            { "key_code": "down_arrow" }
          ]
        }
      ]
    },
    {
      "description": "change control-p to ↑",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "p",
            "modifiers": { "mandatory": [ "control" ] }
          },
          "to": [
            { "key_code": "up_arrow" }
          ]
        }
      ]
    },
    {
      "description": "change control-f to →",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "f",
            "modifiers": { "mandatory": [ "control" ] }
          },
          "to": [
            { "key_code": "right_arrow" }
          ]
        }
      ]
    },
    {
      "description": "change control-h to BS",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": { "mandatory": [ "control" ] }
          },
          "to": [
            { "key_code": "delete_or_backspace" }
          ]
        }
      ]
    },
    {
      "description": "change control-[ to ESC",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "open_bracket",
            "modifiers": { "mandatory": [ "control" ] }
          },
          "to": [
            { "key_code": "escape" }
          ]
        }
      ]
    },
    {
      "description": "change control-g to ESC",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "g",
            "modifiers": { "mandatory": [ "control" ] }
          },
          "to": [
            { "key_code": "escape" }
          ]
        }
      ]
    }
  ]
}
